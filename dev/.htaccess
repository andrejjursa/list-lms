<IfModule mod_rewrite.c>
    SetEnv MOD_REWRITE_ENABLED yes

    RewriteEngine on
    RewriteBase /
    
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>

<IfModule mod_php5.c>
php_value memory_limit 256M
</IfModule>
